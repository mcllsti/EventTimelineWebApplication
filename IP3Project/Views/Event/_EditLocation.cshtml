@model IP3Project.Models.EditLocationViewModel

<h4>Edit Event Location</h4>
<hr />
<div class="create-form">
    <div class="row">
        <div class="col-8">
            <form asp-action="EditLocation" id="Form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(m => m.TimelineEventId)
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" id="Location" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <input id="pac-input" class="controls" type="text"
                       placeholder="Enter a location">
                <div id="map"></div>
                <div id="infowindow-content">
                    <span id="place-name" class="title"></span><br>
                    <span id="place-address"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button type="button" class="btn btn-default modal-close-btn" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>

    @{if (Model.Location != null)
        {

            <div id="@Model.Location.Split(",").First()" class="lat"></div>
            <div id="@Model.Location.Substring(Model.Location.IndexOf(",") + 1)" class="lng"></div>

        }
        else
        {

            <div id="0" class="lat"></div>
            <div id="0" class="lng"></div>

        }

    }

</div>


<script src="~/js/validationReset.js"></script>
<script src="~/js/editLocation.js"></script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAGImu3qnFL__9nvtpMtMcfJkXjc9kCg8A&libraries=places&callback=initMap"
        type="text/javascript"></script>

