@model IP3Project.Models.EditDate

<h4>Edit Event Date</h4>
<hr />
<div class="create-form">
    <div class="row">
        <div class="col-8">
            <form asp-action="EditDate" id="Form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(m => m.TimelineEventId)
                <div class="form-group">
                    <label asp-for="EventDateTime" class="control-label"></label>
                    <input asp-for="EventDateTime" id="datetimepicker" class="form-control" />
                    <span asp-validation-for="EventDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


<link rel="stylesheet" type="text/css" href="~/css/jquery.datetimepicker.css" />
<script src="~/js/jquery.datetimepicker.full.min.js"></script>
<script src="~/js/validationReset.js"></script>

<script>
    $('#datetimepicker').datetimepicker({ value: '@Model.GetDateTime()', step: 1, format: 'd.m.Y H:i', });
</script>

