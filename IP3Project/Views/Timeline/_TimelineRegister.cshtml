@model TimelineList;


<div class="container">
    <div class="row h-100 justify-content-center align-items-center">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 37%" scope="col">Title</th>
                    <th class="text-center" scope="col">Date/Time Created</th>

                    <th class="text-right" scope="col">@Html.ActionLink("Create New", "Create", "Timeline", null, new { @class = "btn btn-primary btn-large" })</th>

                </tr>
            </thead>
            <tbody>
                @{
                    //DISPLAYS DYNAMIC TIMELINE CONTENT
                    foreach (var x in Model.timelines)
                    {
                        
                        <tr class="clickable-tr"> <!--The entire <tr> needs to be made clickable so we can go to the timeline, can do this with jQuery/JS.-->
                            <td scope="row">@x.Title; </td>
                            <td class="text-center"> @x.CreationTimeStamp</td>
                            <td class="text-right"><i class="fas fa-cog"></i></td>
                        </tr>

                        //@Html.ActionLink("Delete", "Delete", new { Id = x.Id }, new { @class = "btn btn-primary btn-large" })    @Html.ActionLink("Edit", "Edit", new { Id = x.Id }, new { @class = "btn btn-primary btn-large" })
                    }

                }
            </tbody>
        </table>

        <div class="text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
