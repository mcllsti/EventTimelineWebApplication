@model TimelineList;


<div class="container">
    <div class="row h-100 justify-content-center align-items-center">
        <br />

        <form asp-action="Timelines" method="get">
            <div class="form-actions no-color">
                <p>
                    Search by Title: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="Timelines">Display All</a>
                </p>
            </div>
        </form>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 37%" scope="col"><a asp-action="Timelines" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Timelines.First().Title)</a></th>
                    <th class="text-center" scope="col"><a asp-action="Timelines" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Timelines.First().CreationTimeStamp)</a></th>

                    <th class="text-right" scope="col">@Html.ActionLink("Create New", "CreateTimeline", "Timeline", null, new { @class = "modal-link btn btn-primary btn-large" })</th>
                </tr>
            </thead>


            <tbody>

                @{
                    //DISPLAYS DYNAMIC TIMELINE CONTENT
                    foreach (var x in Model.Timelines)
                    {

                <tr class="clickable-tr">
                    <!--The entire <tr> needs to be made clickable so we can go to the timeline, can do this with jQuery/JS.-->
                    <td scope="row">@Html.ActionLink(x.Title, "EventRegister", "Event", new { Id = x.Id }, null)</td>
                    <td class="text-center"> @x.GetDateTime()</td>
                    <td class="text-right">

                        <div class="dropdown">
                            <div class="dropbtn glyphicon glyphicon-cog"></div>
                            <div class="dropdown-content">
                                @Html.ActionLink("Delete", "Delete", new { Id = x.Id })
                                @Html.ActionLink("Edit", "Edit", "Timeline", new { Id = x.Id }, new { @class = "modal-link" })
                            </div>
                        </div>
                    </td>
                </tr>


            }

                }
            </tbody>
        </table>




        <div id="modal-container" class="modal fade">
            <div class="modal-content">
            </div>
        </div>




        <div class="text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>


